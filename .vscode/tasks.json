{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ 生成活动文件",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",                // 保留调试信息，F5调试能打断点
        "${file}",           // 编译当前打开的文件
        "-o",                // 输出可执行文件
        "${fileDirname}/${fileBasenameNoExtension}",
        "-std=c++20",        // 适配C++20特性（你学的concepts/ranges等）
        "-pthread",          // 支持多线程代码（异步并发模块要用）
        "-O0",               // 关闭优化，调试时变量/流程更精准
        "-I/usr/include/opencv4",  // OpenCV头文件路径（Ubuntu默认）
        "-L/usr/lib/x86_64-linux-gnu",  // OpenCV库路径
        // OpenCV核心库（基础绘图/图像操作足够，按需加其他）
        "-lopencv_core",
        "-lopencv_highgui",
        "-lopencv_imgcodecs",
        "-lopencv_imgproc"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "编译器: /usr/bin/g++ | 支持C++20+OpenCV+调试"
    }
  ]
}
