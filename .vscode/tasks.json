{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ 生成活动文件",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        // 添加OpenCV头文件路径
        "-I/usr/include/opencv4",
        // 添加OpenCV库路径（根据实际情况调整）
        "-L/usr/lib/x86_64-linux-gnu",
        // 链接核心OpenCV库（基础绘图足够），如需其他功能可添加更多库
        "-lopencv_core",
        "-lopencv_highgui",
        "-lopencv_imgcodecs",
        "-lopencv_imgproc"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "调试器生成的任务。添加了OpenCV编译链接参数"
    }
  ],
  "version": "2.0.0"
}
